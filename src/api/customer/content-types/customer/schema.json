{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "creditLimit": {
      "type": "decimal",
      "default": 0
    },
    "creditUsed": {
      "type": "decimal",
      "default": 0
    },
    "paymentTerms": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isBlocked": {
      "type": "boolean",
      "default": false
    },
    "notes": {
      "type": "text"
    },
    "identification": {
      "type": "uid",
      "required": true
    },
    "siigoId": {
      "type": "uid"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    },
    "prices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::price.price",
      "mappedBy": "customer"
    },
    "invoiceOrders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customerForInvoice"
    },
    "mainParty": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "parties"
    },
    "parties": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::customer.customer",
      "mappedBy": "mainParty"
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    },
    "taxes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tax.tax",
      "inversedBy": "customers"
    },
    "identificationType": {
      "type": "enumeration",
      "enum": [
        "CC",
        "NIT"
      ]
    },
    "isCompany": {
      "type": "boolean",
      "default": false
    },
    "territory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::territory.territory",
      "inversedBy": "customers"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::seller.seller",
      "inversedBy": "customers"
    }
  }
}
